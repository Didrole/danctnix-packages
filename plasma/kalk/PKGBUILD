# Maintainer: Danct12 <danct12@disroot.org>
# Contributor: Bernhard Landauer <bernhard@manjaro.org>

pkgname=kalk
pkgver=22.11
pkgrel=1
pkgdesc="Cross-platfrom calculator built with the Kirigami framework"
arch=('x86_64' 'aarch64')
url="https://invent.kde.org/plasma-mobile/kalk"
license=('GPL3')
depends=('ki18n' 'kconfig' 'kcoreaddons' 'knotifications' 'kirigami2' 'kunitconversion' 'kdbusaddons' 'plasma-framework' 'qt5-feedback')
makedepends=('qt5-tools' 'extra-cmake-modules')
source=("https://download.kde.org/stable/plasma-mobile/$pkgver/$pkgname-$pkgver.tar.xz")
sha512sums=('63cdd3482c6c56a26f5c4409d1ca4dc83225f312aada309fccb1adebcf4829191205c4aa9d65905063cf54624bda159c721cf89bd2e7cd10ee799ee763ec2bc7')

prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
