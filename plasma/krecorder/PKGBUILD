# Maintainer: Danct12 <danct12@disroot.org>
# Contributor: Bernhard Landauer <bernhard@manjaro.org>

pkgname=krecorder
pkgver=21.05
pkgrel=1
pkgdesc="Cross-platfrom calculator built with the Kirigami framework"
arch=('x86_64' 'aarch64')
url="https://invent.kde.org/plasma-mobile/kalk"
license=('GPL3')
depends=('ki18n' 'kconfig' 'kirigami2' 'qt5-multimedia')
makedepends=('qt5-tools' 'extra-cmake-modules')
source=("https://download.kde.org/stable/plasma-mobile/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('ac58bb4943c09099f026e0bd2973d22587eafd7e4a79187b5c2618d17b8baa79')

prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
