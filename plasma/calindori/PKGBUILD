# Contributor: Bhushan Shah <bhush94 at gmail dot com>

pkgname=calindori
pkgver=21.05
pkgrel=1
pkgdesc="Calendar application for Mobile Devices running Plasma"
arch=('x86_64' 'aarch64')
url="https://community.kde.org/Plasma/Mobile"
license=('GPL3')
depends=('plasma-framework' 'kcalendarcore' 'kpeople')
makedepends=('cmake' 'extra-cmake-modules' 'kdelibs4support' 'kdoctools')
source=("https://download.kde.org/stable/plasma-mobile/$pkgver/$pkgname-$pkgver.tar.xz")
md5sums=('2bbe4c70e4b7bcc7ca4898621f52f3bd')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF \
    -DKDE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
