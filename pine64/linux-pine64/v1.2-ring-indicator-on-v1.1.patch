From 0365bf27ee436bad240f5e04a9ff2f94f053bedf Mon Sep 17 00:00:00 2001
From: Danct12 <danct12@disroot.org>
Date: Mon, 6 Jul 2020 13:04:11 +0700
Subject: [PATCH] arm64: dts: allwinner: pinephone: add v1.2 ring indicator to
 v1.1

Signed-off-by: Danct12 <danct12@disroot.org>
---
 .../arm64/boot/dts/allwinner/sun50i-a64-pinephone-1.1.dts | 4 ++++
 arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi   | 8 ++++++++
 2 files changed, 12 insertions(+)

diff --git a/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone-1.1.dts b/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone-1.1.dts
index b838a5bd6..09e2e4b9c 100644
--- a/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone-1.1.dts
+++ b/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone-1.1.dts
@@ -58,6 +58,10 @@ &ring_indicator {
 	gpios = <&pio 1 2 GPIO_ACTIVE_LOW>; /* PB2 */
 };
 
+&ring_indicator2 {
+	gpios = <&pio 0 6 GPIO_ACTIVE_LOW>; /* PL6 */
+};
+
 &sgm3140 {
 	flash-gpios = <&pio 2 3 GPIO_ACTIVE_HIGH>; /* PC3 */
 	enable-gpios = <&pio 3 24 GPIO_ACTIVE_HIGH>; /* PD24 */
diff --git a/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi b/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi
index 1c555456b..93a51d0fc 100644
--- a/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi
+++ b/arch/arm64/boot/dts/allwinner/sun50i-a64-pinephone.dtsi
@@ -49,6 +49,14 @@ ring_indicator: ring-indicator {
 			wakeup-event-action = <EV_ACT_ASSERTED>;
 			wakeup-source;
 		};
+
+		ring_indicator2: ring-indicator2 {
+			label = "Ring Indicator v2";
+			linux,can-disable;
+			linux,code = <KEY_WAKEUP>;
+			wakeup-event-action = <EV_ACT_ASSERTED>;
+			wakeup-source;
+		};
 	};
 
 	i2c_csi: i2c-csi {
-- 
